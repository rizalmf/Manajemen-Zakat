               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <JFXButton onAction="#kembaliMenuZakat" ripplerFill="#d7d7d7" style="-fx-background-color: #0091a4; -fx-background-radius: 4px; -fx-padding: 3px 7px 3px 5px;" text="Kembali Ke Menu Zakat" textFill="WHITE">
