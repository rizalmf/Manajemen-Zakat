               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
