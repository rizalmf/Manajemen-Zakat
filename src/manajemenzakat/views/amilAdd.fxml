                                                <Insets top="-4.0" />
                                             </VBox.margin>
                                             <cursor>
                                                <Cursor fx:constant="HAND" />
                                             </cursor>
                                             <graphic>
                                                <FontAwesomeIconView fill="#868686" glyphName="PLUS" />
