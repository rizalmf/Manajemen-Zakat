                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </VBox.margin>
                           <children>
                              <VBox fillWidth="false" minWidth="165.0" prefWidth="165.0" spacing="4.0" style="-fx-background-color: #7c7c7c85; -fx-background-radius: 6px;">
