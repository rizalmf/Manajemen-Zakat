<VBox fx:id="parent" style="-fx-background-color: #ffffffd7;" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manajemenzakat.controller.child.AmilAddController">
