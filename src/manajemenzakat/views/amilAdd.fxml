                                                      <Label text="Password">
                                                         <font>
                                                            <Font size="14.0" />
                                                         </font>
                                                      </Label>
                                                      <HBox>
                                                         <children>
                                                            <JFXPasswordField fx:id="tfFormPassword" focusColor="#00a0b1" prefHeight="25.0" prefWidth="210.0" style="-fx-prompt-text-fill: #00000084;">
                                                               <font>
                                                                  <Font size="16.0" />
                                                               </font>
                                                            </JFXPasswordField>
                                                         </children>
                                                      </HBox>
                                                   </children>
