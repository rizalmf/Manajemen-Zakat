                                                <JFXTextField fx:id="tfFormUserNomor" focusColor="#00a0b1" prefHeight="25.0" prefWidth="576.0" HBox.hgrow="ALWAYS">
                                                   <font>
                                                      <Font size="16.0" />
                                                   </font>
                                                </JFXTextField>
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
