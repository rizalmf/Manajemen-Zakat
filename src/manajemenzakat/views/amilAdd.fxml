                                                <Insets top="-5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <HBox alignment="BOTTOM_LEFT" spacing="12.0" VBox.vgrow="ALWAYS">
                                             <children>
                                                <JFXButton onAction="#simpanUser" style="-fx-background-color: #0275d8; -fx-background-radius: 3px;" text="Simpan" textFill="WHITE">
                                                   <font>
                                                      <Font size="14.0" />
                                                   </font>
                                                </JFXButton>
                                                <JFXButton layoutX="10.0" layoutY="10.0" onAction="#batalSimpanUser" ripplerFill="#e0e0e0" style="-fx-background-color: red; -fx-background-radius: 3px;" text="Batal" textFill="WHITE">
