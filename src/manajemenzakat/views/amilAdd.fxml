                                          <Label text="Alamat">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <HBox>
                                             <children>
                                                <JFXTextField fx:id="tfFormUserAlamat" focusColor="#00a0b1" prefHeight="25.0" prefWidth="576.0" HBox.hgrow="ALWAYS">
